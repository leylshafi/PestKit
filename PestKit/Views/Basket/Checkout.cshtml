@using PestKit.ViewModels
@model OrderVM
@{
    decimal total = 0;
}
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <h4>Billing Details</h4>
            <form method="post">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="checkout__input">
                            <label asp-for="Address">Address<span>*</span></label>
                            <input asp-for="Address" placeholder="Address" class="checkout__input__add">
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Your Order</h4>
                            <div class="checkout__order__products">Products <span>Total</span></div>
                            @foreach (BasketItem item in Model.BasketItems)
                            {
                                total += item.Price * item.Count;
                                <ul>
                                    <li>@item.Product.Name <span>$@item.Price</span></li>
                                </ul>
                            }
                            
                            <div class="checkout__order__total">Total <span>$@total</span></div>
                            <button type="submit" class="btn btn-warning">PLACE ORDER</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->