@using PestKit.ViewModels
@model ProfileVM
<div class="container-xl px-4 mt-4">
    <!-- Account page navigation-->
   
    <form method="post" enctype="multipart/form-data">
        <div class="row">

            <div class="col-xl-4">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Profile Picture</div>
                    <div class="card-body text-center">
                        <!-- Profile picture image-->
                        <img class="img-account-profile rounded-circle mb-2" src="~/assets/img/@Model.ProfileImage" alt="" style="width:200px;">
                        <div class="form-group">
                            <label asp-for="ProfilePhoto">JPG or PNG no larger than 5 MB</label>
                            <input asp-for="ProfilePhoto" class="form-control" placeholder="Photo">
                            <span class="text-danger" asp-validation-for="ProfilePhoto"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">Account Details</div>
                    <div class="card-body">
                        <form>
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (first name)-->
                                <div class="col-md-6">
                                    <label class="small mb-1" asp-for="Name">First name</label>
                                    <input class="form-control" asp-for="Name" placeholder="Enter your first name">
                                </div>
                                <!-- Form Group (last name)-->
                                <div class="col-md-6">
                                    <label class="small mb-1" asp-for="Surname">Last name</label>
                                    <input class="form-control" asp-for="Surname" placeholder="Enter your last name">
                                </div>
                            </div>
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (birthday)-->
                                <div class="col-md-6">
                                    <label class="small mb-1" asp-for="Birthday">Birthday</label>
                                    <input class="form-control" asp-for="Birthday" placeholder="Enter your birthday" >
                                </div>
                            </div>
                            <!-- Save changes button-->
                            <button class="btn btn-primary" type="submit">Save changes</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>