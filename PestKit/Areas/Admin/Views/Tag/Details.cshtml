@model Tag
<div class="container">
	<h1 class="m-5">@Model.Name</h1>
	<div class="d-flex flex-wrap">
		@foreach (BlogTag bTag in Model.BlogTags)
		{
			<div class="card m-1" style="width: 18rem;">
				<img src="~/assets/img/@bTag.Blog.ImageUrl" class="card-img-top" alt="...">
				<div class="card-body">
					<h5 class="card-title">@bTag.Blog.Name</h5>
					<p class="card-text">@bTag.Blog.Description</p>
				</div>
			</div>
		}
	</div>
</div>

