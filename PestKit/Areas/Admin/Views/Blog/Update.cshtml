@model UpdateBlogVM
<div class="content-wrapper">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<form class="forms-sample" method="post" enctype="multipart/form-data">
						<div class="form-group">
							<img src="~/assets/img/@Model.ImageUrl" width="120px" />
							<input asp-for="ImageUrl" type="hidden" class="form-control">
						</div>
						<div class="form-group">
							<label asp-for="@Model.Photo">Photo</label>
							<input asp-for="@Model.Photo" class="form-control" placeholder="Photo">
							<span class="text-danger" asp-validation-for="Photo"></span>
						</div>
						<div class="form-group">
							<label asp-for="@Model.Name">Name</label>
							<input asp-for="@Model.Name" class="form-control" placeholder="Name">
							<span class="text-danger" asp-validation-for="Name"></span>
						</div>
						<div class="form-group">
							<label asp-for="@Model.Description">Description</label>
							<input asp-for="@Model.Description" class="form-control" placeholder="Description">
							<span class="text-danger" asp-validation-for="Description"></span>
						</div>
						<div class="form-group">
							<label asp-for="AuthorId">Author</label>
							<select asp-for="AuthorId" asp-items="new SelectList(Model.Authors,nameof(Author.Id),nameof(Author.Name))" class="form-control">
								<option selected disabled>Choose Author</option>
							</select>
							<span class="text-danger" asp-validation-for="AuthorId"></span>
						</div>
						<div class="form-group">
							<label asp-for="TagIds">Tags</label>
							<select multiple asp-for="TagIds" asp-items="new SelectList(Model.Tags,nameof(Tag.Id),nameof(Tag.Name))" class="form-control">
							</select>
							<span class="text-danger" asp-validation-for="TagIds"></span>
						</div>

						<button type="submit" class="btn btn-primary me-2">Submit</button>
						<a asp-action="Index" class="btn btn-light">Cancel</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
