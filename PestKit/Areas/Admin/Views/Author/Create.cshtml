@model CreateAuthorVM
<div class="content-wrapper">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<form class="forms-sample" method="post">
						<div class="form-group">
							<label asp-for="@Model.Name">Name</label>
							<input asp-for="@Model.Name" class="form-control" placeholder="Name"> 
							<span class="text-danger" asp-validation-for="Name" ></span>
						</div>
						<div class="form-group">
							<label asp-for="@Model.Surname">Surname</label>
							<input asp-for="@Model.Surname" class="form-control" placeholder="Name">
							<span class="text-danger" asp-validation-for="Surname"></span>
						</div>
						
						<button type="submit" class="btn btn-primary me-2">Submit</button>
						<a asp-action="Index" class="btn btn-light">Cancel</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
