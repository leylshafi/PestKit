@model UpdateEmployeeVM
<div class="content-wrapper">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<form class="forms-sample" method="post" enctype="multipart/form-data">
						<div class="form-group">
							<img style="width:150px;height:150px;" src="~/assets/img/@Model?.ImageUrl" />
						</div>
						<div class="form-group">
							<label asp-for="Image">Image</label>
							<input accept="image/*" asp-for="Image" class="form-control">
							<span class="text-danger" asp-validation-for="Image"></span>
						</div>
						<div class="form-group">
							<label asp-for="Name">Name</label>
							<input asp-for="Name" class="form-control" placeholder="Name">
							<span class="text-danger" asp-validation-for="Name"></span>
						</div>
						<div class="form-group">
							<label asp-for="InstaLink">Instagram</label>
							<input asp-for="InstaLink" class="form-control" placeholder="Instagram">
							<span class="text-danger" asp-validation-for="InstaLink"></span>
						</div>
						<div class="form-group">
							<label asp-for="FbLink">Facebook</label>
							<input asp-for="FbLink" class="form-control" placeholder="Facebook">
							<span class="text-danger" asp-validation-for="FbLink"></span>
						</div>
						<div class="form-group">
							<label asp-for="TwitterLink">Twitter</label>
							<input asp-for="TwitterLink" class="form-control" placeholder="Twitter">
							<span class="text-danger" asp-validation-for="TwitterLink"></span>
						</div>
						<div class="form-group">
							<label asp-for="LinkedinLink">Linkedin</label>
							<input asp-for="LinkedinLink" class="form-control" placeholder="Linkedin">
							<span class="text-danger" asp-validation-for="LinkedinLink"></span>
						</div>

						<div class="form-group">
							<label asp-for="DepartmentId">Category</label>
							<select asp-for="DepartmentId" asp-items="new SelectList(Model.Departments,nameof(Department.Id),nameof(Department.Name))" class="form-control">
								<option selected disabled>Choose Department</option>
							</select>
							<span class="text-danger" asp-validation-for="DepartmentId"></span>
						</div>
						<div class="form-group">
							<label asp-for="PositionId">Category</label>
							<select asp-for="PositionId" asp-items="new SelectList(Model.Positions,nameof(Position.Id),nameof(Position.Name))" class="form-control">
								<option selected disabled>Choose Position</option>
							</select>
							<span class="text-danger" asp-validation-for="PositionId"></span>
						</div>

						<button type="submit" class="btn btn-primary me-2">Submit</button>
						<a asp-action="Index" class="btn btn-light">Cancel</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
