@model Employee
<div class="card mb-3 border-0">
    <img style="width:400px;" src="~/assets/img/@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Instagram: <a>@Model.InstaLink</a></p>
        <p class="card-text">Facebook: <a>@Model.FbLink</a></p>
        <p class="card-text">Twitter: <a>@Model.TwitterLink</a></p>
        <p class="card-text">Linkedin: <a>@Model.LinkedinLink</a></p>
        <h6>@Model.Department.Name</h6>
        <p class="card-text"><small class="text-body-secondary">@Model.Position.Name</small></p>
    </div>
</div>
